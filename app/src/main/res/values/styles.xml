<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Chip">
        <item name="chipIconTint">@color/colorWhite</item>
        <item name="chipBackgroundColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    
    <style name="LogoAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent" >
        <item name="cardCornerRadius">40dp</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeBottomLeft">60dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">60dp</item>
    </style>

</resources>