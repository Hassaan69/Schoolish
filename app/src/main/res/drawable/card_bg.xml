<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="40dp" android:left="40dp">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#4D5CB9FF"
                android:endColor="#4DEEF8FF"
                android:angle="270" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item  android:top="5dp" android:right="15dp" android:left="15dp">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#995CB9FF"
                android:endColor="#99EEF8FF"
                android:angle="270" />

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:top="10dp" >
        <shape>
            <solid android:color="#5CB9FF" />
            <corners android:radius="20dp" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="20dp" />
        </shape>
    </item>
</layer-list>